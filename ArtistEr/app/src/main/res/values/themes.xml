<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArtistEr" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_1</item>
        <item name="colorPrimaryVariant">@color/color_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_1</item>
        <item name="colorSecondaryVariant">@color/color_5</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">#00FFFFFF</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.ArtistEr.AppBarOverlay" parent="Theme.ArtistEr" />

    <style name="Theme.ArtistEr.TransparentStatusBar" parent="Theme.ArtistEr">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.ArtistEr.PopupOverlay" parent="Theme.ArtistEr" />
</resources>